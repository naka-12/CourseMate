//schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                     Int            @id @default(autoincrement())
  name                   String
  enrollments            Enrollement[]
  relationshipsAsEarlier Relationship[] @relation("relationshipsAsEarlier")
  relationshipsAsLater   Relationship[] @relation("relationshipsAsLater")
}

model Course {
  id          Int           @id @default(autoincrement())
  name        String
  enrollments Enrollement[]
}

model Enrollement {
  id       Int    @id @default(autoincrement())
  user     User   @relation(fields: [userId], references: [id])
  userId   Int
  course   Course @relation(fields: [courseId], references: [id])
  courseId Int
}

model Relationship {
  id           Int            @id @default(autoincrement())
  status       MatchingStatus
  earlierUser  User           @relation("relationshipsAsEarlier", fields: [earlierUserId], references: [id])
  earlierUserId Int
  laterUser    User           @relation("relationshipsAsLater", fields: [laterUserId], references: [id])
  laterUserId  Int
}

enum MatchingStatus {
  requestToLater
  requestToEarlier
  Matched
}
